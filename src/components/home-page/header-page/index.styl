#header-page.no-padding
    padding-top 0

#header-page
    width 100%
    height 100%
    padding-top 79px
    transition: all .6s

    @media screen and (max-width: 775px)
        padding-top 127px

    @media screen and (max-width: 560px)
        padding-top 146px

    @media screen and (max-width: 416px)
        padding-top 165px

    .background
        background-image linear-gradient(rgba(0, 57, 97, 0.65)), url('~@/assets/images/backdrop-background.jpg')
        filter contrast(150%)
        background-size cover
        background-repeat no-repeat
        background-position center
        width 100%
        height 100%
        z-index 1
        display flex
        align-items center
        justify-content center
        position relative

        .container
            padding 18px 34px

            .logo-container > img
                position absolute
                top 18px
                left 34px
                width 50px
                height 50px

            .content-container
                display flex
                flex-direction column
                text-align center
                align-items center

                .greetings
                    font-size 32px
                    font-weight 400
                    margin-bottom 10px

                .title
                    font-size 26px
                    font-weight 500
                    margin-bottom 15px

                .description
                    font-size 20px
                    font-weight 300
                    line-height 30px

                .button
                    margin-top 20px
                    text-transform uppercase
                    font-size 16px
                    border 2px solid
                    padding 15px 30px
                    cursor pointer
                    border-radius 3px

                .button:hover
                    background white
                    color #004a75
                    border-color white
                    font-weight 500


