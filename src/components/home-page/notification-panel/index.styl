#notification-panel
    width 100%
    position fixed
    top 0
    z-index 9999
    overflow hidden

    .container
        padding 20px 15px

        .notification-content
            display flex
            align-items center
            justify-content center
            min-width 720px
            margin 0 auto

            @media screen and (max-width: 775px)
                flex-wrap wrap
                align-items start
                width 100%
                flex-direction column
                min-width 0

            .text
                padding-right 10px

                @media screen and (max-width: 775px)
                    margin-bottom 10px
                    padding-right 0

                .link
                    cursor pointer
                    color blue

            .button
                border-radius 5px
                cursor pointer
                color white
                padding 10px
                text-align center
                width 65px


.slide-up-leave-active
    transition all 0.6s ease-out

.slide-up-enter, .slide-up-leave-to
    transform translateY(-200px)