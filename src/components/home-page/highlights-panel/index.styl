#highlights-panel
    width 100%

    .container
        width 100%
        padding 4.5em 0

        .title-container
            padding-bottom 3.8em
            color black
            display flex
            align-items center
            flex-direction column

            .title
                font-size 28px

            .description
                margin-top 15px
                line-height 26px
                max-width 580px
                text-align center
                padding 0 15px

        .highlight-container
            display grid
            padding 0 30px
            grid-gap 30px
            grid-template-columns repeat(3, 1fr)

            @media screen and (max-width: 960px)
                grid-template-columns repeat(2, 1fr)

            @media screen and (max-width: 480px)
                grid-template-columns 1fr

            .box-container
                width 100%
                height 100%
                border 1px solid #b1b1b1

                .content
                    padding 30px 20px

                    .header
                        display flex
                        justify-content space-between
                        margin-bottom 18px

                        .title
                            color #504845
                            font-size 24px

                        .icon
                            color #aaa4a4
                            font-size 24px

                    .description
                        text-align left
                        color #363636